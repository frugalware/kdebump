#!/bin/sh

if [ -z "$FBTERM_TTY" ]; then
	echo '$FBTERM_TTY is not set.'
	exit 1
fi

if [ ! -c "$FBTERM_TTY" ]; then
	echo "$FBTERM_TTY does not exist."
	exit 1
fi

if [ -f /etc/issue ]; then
	cat < /etc/issue 2>&1 | sed "s|\\l|${FBTERM_TTY/\/dev\//}|g" > "$FBTERM_TTY" 2>&1
fi

exec login < "$FBTERM_TTY" > "$FBTERM_TTY" 2>&1
