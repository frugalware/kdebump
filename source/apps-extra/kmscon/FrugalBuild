# Compiling Time: 0.15 SBU
# Maintainer: James Buren <ryuo@frugalware.org>

pkgname=kmscon
pkgver=1.g66fad90
pkgrel=1
pkgdesc="A modern terminal emulator that improves the Linux virtual console."
depends=('systemd' 'libxkbcommon')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_github_author=dvdhrm
_F_github_devel=yes
Finclude github
source=('fixes.patch')

build()
{
	rm -rf $pkgname || Fdie
	Funpack_scm
	Fexec mkdir m4 || Fdie
	Fautoreconf
	Fbuild --disable-debug --with-video=fbdev --with-fonts=unifont --with-renderers=bbulk --with-sessions=terminal
	Ffilerel docs/kmscon\@.service /lib/systemd/system/kmscon\@.service
}

# optimization OK
